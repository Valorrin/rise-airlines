@model Airlines.Web.Models.FlightsViewModel

<div class="main-header">
    <a asp-controller="Home" asp-action="Index" class="arrow-back">
        <img src="./assets/left sidebar.png" alt="arrow-back" />
    </a>
    <h2>Flights</h2>
</div>
<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>Flight Number</th>
                <th>From</th>
                <th>To</th>
                <th>Departure</th>
                <th>Arrival</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Flights)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Number)</td>
                    <td>@Html.DisplayFor(modelItem => item.DepartureAirport != null ? item.DepartureAirport.Name : string.Empty)</td>
                    <td>@Html.DisplayFor(modelItem => item.ArrivalAirport != null ? item.ArrivalAirport.Name : string.Empty)</td>
                    <td>@Html.DisplayFor(modelItem => item.DepartureDateTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.ArrivalDateTime)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="form-wrapper">
    <button class="show-form-button">Show Form</button>
    <form asp-controller="Flights" asp-action="AddFlight" method="post">
        <fieldset>
            <legend>Add New Flight</legend>
            <label asp-for="Flights.First().Number">Number:</label>
            <input asp-for="Flights.First().Number" class="form-control">

            <label asp-for="Flights.First().DepartureAirportId">From:</label>
            <select asp-for="Flights.First().DepartureAirportId" asp-items="@(new SelectList(Model.Airports, "AirportId", "Name"))" class="form-control">
                <option value="">Select Departure Airport</option>
            </select>

            <label asp-for="Flights.First().ArrivalAirportId">To:</label>
            <select asp-for="Flights.First().ArrivalAirportId" asp-items="@(new SelectList(Model.Airports, "AirportId", "Name"))" class="form-control">
                <option value="">Select Arrival Airport</option>
            </select>

            <label asp-for="Flights.First().DepartureDateTime">Departure Time:</label>
            <input asp-for="Flights.First().DepartureDateTime" class="form-control" type="datetime-local">

            <label asp-for="Flights.First().ArrivalDateTime">Arrival Time:</label>
            <input asp-for="Flights.First().ArrivalDateTime" class="form-control" type="datetime-local">

            <input type="submit" value="Submit" class="submit-form-button">
        </fieldset>
    </form>
</div>