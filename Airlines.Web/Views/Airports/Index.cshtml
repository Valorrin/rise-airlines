@model IEnumerable<Airlines.Service.Dto.AirportDto>

<div class="main-header">
    <a asp-controller="Home" asp-action="Index" class="arrow-back">
        <img src="./assets/left sidebar.png" alt="arrow-back" />
    </a>
    <h2>Airports</h2>
</div>
<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Country</th>
                <th>City</th>
                <th>Code</th>
                <th>Runways</th>
                <th>Founded</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Country)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>@Html.DisplayFor(modelItem => item.Code)</td>
                    <td>@Html.DisplayFor(modelItem => item.RunwaysCount)</td>
                    <td>@Html.DisplayFor(modelItem => item.Founded)</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="form-wrapper">
    <button class="show-form-button">Show Form</button>
    <form asp-controller="Airports" asp-action="AddAirport" method="post">
        <fieldset>
            <legend>Add New Airline</legend>
            <label asp-for="First().Name">Name</label>
            <input asp-for="First().Name" class="form-control">

            <label asp-for="First().Country">Country</label>
            <input asp-for="First().Country" class="form-control">

            <label asp-for="First().City">City</label>
            <input asp-for="First().City" class="form-control">

            <label asp-for="First().Code">Code</label>
            <input asp-for="First().Code" class="form-control">

            <label asp-for="First().RunwaysCount">Runways</label>
            <input asp-for="First().RunwaysCount" class="form-control" type="number">

            <label asp-for="First().Founded">Founded</label>
            <input asp-for="First().Founded" class="form-control" type="date">

            <input type="submit" value="Submit" class="submit-form-button">
        </fieldset>
    </form>
</div>